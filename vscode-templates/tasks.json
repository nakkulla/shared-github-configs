{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üîß Taskmaster: Initialize Project",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "task-master-ai", "initialize"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "üìã Taskmaster: Get Tasks",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "task-master-ai", "get-tasks"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "üéØ Taskmaster: Next Task",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "task-master-ai", "next-task"],
