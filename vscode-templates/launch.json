{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸš€ Launch Chrome (localhost:3000)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/src/*"
      }
    },
    {
      "name": "ğŸ”— Attach to Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "ğŸ› Debug Node.js",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.js",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "ğŸ”§ Debug Node.js with nodemon",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js",
      "args": ["${workspaceFolder}/index.js"],
      "console": "integratedTerminal",
      "restart": true,
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "ğŸ§ª Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "--detectOpenHandles"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "ğŸ§ª Debug Jest Test (Current File)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "${fileBasenameNoExtension}"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "ğŸ Debug Python",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "python": "${command:python.interpreterPath}"
    },
    {
      "name": "ğŸ Debug Python Module",
      "type": "python",
      "request": "launch",
      "module": "main",
      "console": "integratedTerminal",
      "python": "${command:python.interpreterPath}",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "ğŸ“± Debug React Native (iOS)",
      "type": "reactnative",
      "request": "launch",
      "platform": "ios",
      "target": "simulator",
      "sourceMaps": true,
      "outDir": "${workspaceFolder}/.vscode"
    },
    {
      "name": "ğŸ“± Debug React Native (Android)",
      "type": "reactnative",
      "request": "launch",
      "platform": "android",
      "target": "device",
      "sourceMaps": true,
      "outDir": "${workspaceFolder}/.vscode"
    },
    {
      "name": "âš›ï¸ Debug Next.js",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    },
    {
      "name": "ğŸ”§ Debug TypeScript",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "args": ["${file}"],
      "console": "integratedTerminal",
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/tsconfig.json"
      }
    },
    {
      "name": "ğŸ³ Debug Docker Container",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "protocol": "inspector"
    },
    {
      "name": "ğŸ” Debug Express Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "*"
      },
      "console": "integratedTerminal",
      "restart": true,
      "runtimeArgs": ["--inspect-brk"]
    }
  ],
  "compounds": [
    {
      "name": "ğŸŒ Debug Full Stack (Client + Server)",
      "configurations": [
        "ğŸš€ Launch Chrome (localhost:3000)",
        "ğŸ” Debug Express Server"
      ]
    },
    {
      "name": "ğŸ§ª Debug Tests + Server",
      "configurations": [
        "ğŸ§ª Debug Jest Tests",
        "ğŸ” Debug Express Server"
      ]
    }
  ]
}
